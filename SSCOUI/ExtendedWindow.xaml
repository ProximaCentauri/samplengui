<Window
    x:Class="SSCOUI.ExtendedWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:c="clr-namespace:SSCOUI.Controls"
    mc:Ignorable="d"
    Title="NCR NEXTGENUI EXTENDED"
    Icon="ncr.ico"
    Height="768"
    Width="1024"
    WindowStyle="None"
    ResizeMode="NoResize"
    WindowStartupLocation="Manual"
    Loaded="Window_Loaded"
    xmlns:controls="clr-namespace:SSCOUIViews.Controls;assembly=SSCOUIViews"
    Style="{StaticResource mainWindowStyle}"
    Unloaded="Window_Unloaded">
    <Grid>
        <controls:ExtendedHeaderControl
            x:Name="HeaderControl"
            HorizontalAlignment="Center" />
        <controls:ExtendedCartControl
            x:Name="ExtendedCartControl"
            HorizontalAlignment="Stretch" />
        <c:PopupControl
            x:Name="PopupControl" />
    </Grid>
</Window>
